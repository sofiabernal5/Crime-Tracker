<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrimeTrackerApp.MainPage"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="20">
        
        <Label Text="Crime Tracker App" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry x:Name="usernameEntry" Placeholder="Username" />

        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />

        <Label x:Name="messageLabel" Text="" TextColor="Red" HorizontalOptions="Center" />
        
    </VerticalStackLayout>
</ContentPage>